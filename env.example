# Database Configuration (Heroku PostgreSQL will automatically provide DATABASE_URL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_password

# NextAuth Configuration
NEXTAUTH_URL=https://your-app-name.herokuapp.com
NEXT_PUBLIC_APP_URL=https://your-app-name.herokuapp.com

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=5001
DEBUG=false

# Model Configuration
MODEL_PATH=./models
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=backend.log

# Storage Configuration
STORAGE_PATH=./storage

# API Keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
MINIMAX_API_KEY=your_minimax_api_key_here

# Node.js Environment
NODE_ENV=production

# Transcription Settings
ENABLE_PAID_TRANSCRIPTION=true
TRANSCRIPTION_BUDGET_LIMIT=5.00

# Vietnamese ASR Model
VI_ASR_MODEL=nguyenvulebinh/wav2vec2-large-vietnamese-250h

# Optional: Cloud Storage (AWS S3)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your_bucket_name
# USE_S3_STORAGE=false
